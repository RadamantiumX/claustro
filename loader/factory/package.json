{
  "name": "factory",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "apiHost": "http://localhost",
    "port": "3000"
  },
  "scripts": {
    "pm2:dev": "pm2 start ecosystem.config.js",
    "pm2:delete":"pm2 delete all &",
    "test": "pnpm run test:unit:run && pnpm run test:coverage",
    "test:vitest": "vitest",
    "test:watch": "vitest --watch",
    "test:unit": "vitest .unit.test.ts",
    "test:integration": "vitest .integration.test.ts",
    "test:unit:run": "pnpm test:unit --run",
    "test:integration:run": "pnpm test:integration --run",
    "test:coverage": "vitest run --coverage",
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --skip-generate",
    "db:deploy": "prisma migrate deploy",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "report": "echo API is at $npm_package_config_apiHost on port $npm_package_config_port"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@trpc/client": "^11.3.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@trpc/server": "^11.1.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "envalid": "^8.1.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.8",
    "prisma": "^6.8.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vitest-mock-extended": "^3.1.0"
  },
  "exports": "./src/**"
}

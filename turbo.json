{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**"
      ],
      "env": ["DATABASE_URL", "NODE_ENV", "JWT_SECRET", "JWT_REFRESH_SECRET", "VITE_ACCESS_TOKEN", "VITE_REFRESH_TOKEN", "VITE_USERNAME", "TRPC_URL"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },

    "dev": {
      "inputs": [
        "$TURBO_DEFAULT$",
         ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "cache": false
    },
    "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true
  },
  "db:deploy": {
    "cache": false
  },
  "test":{
     "dependsOn": ["^test"]
  },
  "test:watch":{
    "cache": false,
    "persistent": true
  }
  },
  "globalDependencies": ["tsconfig.json"]
  
}
{

  "version": 2,
  "builds": [
    {
      "src": "loader/api/dist/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "loader/client/vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "loader/client" }
    }
  ],
  "routes": [
    {
      "src": "loader/api/(.*)",
      "dest": "loader/api/"
    },
    {
      "src": "loader/client/(.*)",
      "dest": "loader/client/"
    }
  ],
   "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
}